{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./src/hardhat/scripts",
    "./src"
  ],
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"],
  "paths": {
    "@layouts": ["src/layouts/*"],
    "@components": ["src/components/*"],
    "@utils/*": ["src/utils/*"],
    "@assets/*": ["src/assets/*"],
    "@models": ["src/models/*"],
    "@definitions/*": ["src/definitions/*"],
    "@api/*": ["src/api/*"],
    "@hardhat/*": ["src/hardhat/*"],
    "@contracts/*": ["src/hardhat/artifacts/contracts/*"]
  }
}
